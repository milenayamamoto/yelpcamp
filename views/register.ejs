<!-- include header -->
<% include ./partials/header %>

<div class="row justify-content-center">
    <div class="col-xs-12 col-md-8 col-lg-6">		
        <form action="/register" method="POST" class="form-signin">
			<h1 class="text-center">Register</h1>
			
			<div class="input-group mb-2">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputUsername"><i class="fas fa-user"></i></span>
				</div>
				<input class="form-control" type="text" name="username" placeholder="Username" aria-describedby="inputUsername" required autofocus>
			</div>
			<div class="input-group mb-2">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputPassword"><i class="fas fa-lock"></i></span>
				</div>
				<input class="form-control" type="password" name="password" placeholder="Password" aria-describedby="inputPassword" required>
			</div>
			<div class="input-group mb-2">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputName"><i class="fas fa-pencil-alt"></i></span>
				</div>
				<input class="form-control" type="text" name="firstName" placeholder="First Name" aria-describedby="inputName" required>
				<input class="form-control" type="text" name="lastName" placeholder="Surname" aria-describedby="inputName" required>
			</div>
			<div class="input-group mb-2">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputEmail"><i class="fas fa-envelope"></i></span>
				</div>
				<input class="form-control" type="email" name="email" placeholder="email@domain.com" aria-describedby="inputEmail" required>
			</div>
			<div class="input-group mb-2">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputAvatar"><i class="fas fa-camera"></i></span>
				</div>
				<input class="form-control" type="text" name="avatar" placeholder="Avatar Image URL" aria-describedby="inputAvatar">
			</div>
			<div class="input-group mb-2">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputAdminCode"><i class="fas fa-key"></i></span>
				</div>
				<input class="form-control" type="text" name="adminCode" placeholder="Admin code" aria-describedby="inputAdminCode">
			</div>
			
			<button class="btn btn-lg btn-success btn-block" type="submit">Register <i class="fas fa-arrow-alt-circle-right"></i></button>
        </form>
        <div class="form-signin">
			<a href="/campgrounds">Go Back</a>
		</div>
    </div>
</div>

<!-- include footer -->
<% include ./partials/footer %>