<!-- include header -->
<% include ../partials/header %>

<!-- Jumbotron header -->
<div class="row-full jumbotron mt-5 p-5 main_banner">
	<div class="container text-center">
		<h1><i class="fas fa-map-signs"></i><span class="font-title"> Bem-vindo ao AcampAki!</span></h1>
		<p>Veja nossos acampamentos e descubra momentos maravilhosos.</p>
		<!-- New Campground button -->
		<div class="mb-4">
			<a class="btn btn-success btn-acamp" href="/campgrounds/new"><i class="fas fa-mountain"></i> Adicionar acampamento</a>
		</div>
	</div>
</div>

<!-- Search bar -->
<form action="/campgrounds" method="GET">
	<div class="input-group mb-3">
		<input class="form-control" type="text" name="search" placeholder="Procurar..." aria-describedby="Search">
		<div class="input-group-append">
			<button class="input-group-text btn btn-success" id="Search"><i class="fas fa-search"></i></button>
		</div>
	</div>
</form>	

<div class="row text-center">
	<% campgrounds.forEach((campground) => { %>
		<div class="col-lg-3 col-md-4 col-sm-6 mb-4">			
			<div class="card index-card">
				<a href="/campgrounds/<%= campground._id %>">
					<!-- Check if there's a campground image -->
					<div class="img-card-campground">
						<% if(campground.image !== "") { %>
							<img src="<%= campground.image %>" class="card-img-top landing-page" alt="<%= campground.image %>">
						<% } else { %>
							<img src="https://dummyimage.com/500x300/a1a1a1/ffffff&text=No+Image" class="card-img-top landing-page" alt="Sem imagem disponÃ­vel">
						<% } %>
						<div class="badges">
							<span class="badge badge-pill badge-light mr-2 text-primary"><i class="fas fa-thumbs-up"></i> <%= campground.likes.length %></span>
							<span class="badge badge-pill badge-warning"><i class="fas fa-comments"></i> <%= campground.comments.length %></span>
						</div>
					</div>
					<h5 class="card-title my-3"><%= campground.name %></h5>
					<div class="card-body p-0 pb-2">
						<p>R$<%= campground.price %> <small>/noite</small></p>

					</div>
				</a>
			</div>	
		</div>
	<% }) %>
	
	<% if(noMatch !== undefined) { %>
		<div class="col-md-12">
			<h3><%= noMatch %></h3>
		</div>
	<% } %>
</div>

<!-- include footer -->
<% include ../partials/footer %>